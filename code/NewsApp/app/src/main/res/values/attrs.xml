<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialTabHost">

        <!-- Custom attributes -->
        <attr name="hasIcons" format="boolean" />
        <attr name="materialTabsPrimaryColor" format="color" />
        <attr name="accentColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <!-- RelativeTimeTextView -->
    <declare-styleable name="RelativeTimeTextView">
        <attr name="relative_time_prefix" format="string" />
        <attr name="relative_time_suffix" format="string" />
        <attr name="reference_time" format="string" />
    </declare-styleable>

    <!--RobotoTextView-->
    <declare-styleable name="RobotoTextView">
        <attr name="typeface" />
        <attr name="fontFamily" />
        <attr name="textWeight" />
        <attr name="textStyle" />
    </declare-styleable>

    <attr name="typeface">
        <enum name="roboto_regular" value="0" />
        <enum name="roboto_medium" value="1" />
    </attr>
    <attr name="fontFamily">
        <enum name="roboto" value="0" />
        <enum name="roboto_condensed" value="1" />
        <enum name="roboto_slab" value="2" />
    </attr>
    <attr name="textWeight">
        <enum name="normal" value="0" />
        <enum name="thin" value="1" />
        <enum name="light" value="2" />
        <enum name="medium" value="3" />
        <enum name="bold" value="4" />
        <enum name="ultra_bold" value="5" />
    </attr>
    <attr name="textStyle">
        <enum name="normal" value="0" />
        <enum name="italic" value="1" />
    </attr>

    <!--StaggeredGridView-->
    <declare-styleable name="StaggeredGridView">
        <attr name="drawSelectorOnTop" format="boolean" />
        <attr name="numColumns" format="integer" />
        <attr name="itemMargin" format="dimension" />
    </declare-styleable>
</resources>