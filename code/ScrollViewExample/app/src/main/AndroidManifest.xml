<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karomo.scrollviewexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/login_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karomo.scrollviewexample.MainActivity" />
        </activity>
        <activity
            android:name=".LoginWithScrollviewActivity"
            android:label="@string/login_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karomo.scrollviewexample.MainActivity" />
        </activity>

        <activity
            android:name=".LongTextActivity"
            android:label="@string/long_text_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karomo.scrollviewexample.MainActivity" />
        </activity>
        <activity
            android:name=".LongTextWithScrollViewActivity"
            android:label="@string/long_text_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.karomo.scrollviewexample.MainActivity" />
        </activity>
    </application>

</manifest>
